	<!-- global - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="appBackground">@color/bg_light</item>
		<item name="background">@color/bg_light</item>
		<item name="android:textColor">@color/black</item>

		<item name="actionBarTheme">@style/ExpenseMoney88.ActionBar.Theme</item>
		<item name="actionBarStyle">@style/ExpenseMoney88.Widget.ActionBar</item>
		<item name="preferenceTheme">@style/ExpenseMoney88.ref</item>

		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/bg_light</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/bg_dark</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<item name="labelVisibilityMode">unlabeled</item>

		<item name="itemBackground">@android:color/transparent</item>

		<!-- view style -->
		<item name="appViewButtonStyle">@style/ExpenseMoney88.Button</item>
		<item name="appViewIconButtonStyle">@style/ExpenseMoney88.IconButton</item>
	</style>

	<!-- buttons - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88.Button" parent="Widget.MaterialComponents.Button">
		<item name="shapeAppearanceOverlay">@style/ExpenseMoney88.Shape.Rounded</item>
		<item name="backgroundTint">@color/white</item>
		<item name="iconTint">@color/black</item>
		<item name="android:textColor">@color/black</item>
	</style>
	<!-- icon button -->
	<style name="ExpenseMoney88.IconButton" parent="Widget.App.Button.OutlinedButton.IconOnly">
		<item name="backgroundTint">@color/white</item>
		<item name="iconTint">@color/black</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:elevation">10dp</item>
		<item name="iconGravity">textStart</item>
	</style>

	<!-- input - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="backgroundTint">@color/bg_light</item>
		<item name="boxCornerRadiusBottomEnd">@dimen/radius</item>
		<item name="boxCornerRadiusBottomStart">@dimen/radius</item>
		<item name="boxCornerRadiusTopEnd">@dimen/radius</item>
		<item name="boxCornerRadiusTopStart">@dimen/radius</item>
	</style>

	<!-- shapes - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88.Shape" parent="" />

	<style name="ExpenseMoney88.Shape.Rounded" parent="ExpenseMoney88.Shape">
		<item name="cornerSize">@dimen/radius_button</item>
		<item name="android:shadowColor">@color/red</item>
	</style>

	<style name="ExpenseMoney88.Button.CenterAction" parent="Widget.Design.FloatingActionButton">
		<item name="backgroundTint">@color/bg_light</item>
		<item name="android:foreground">?selectableItemBackgroundBorderless</item>
		<item name="android:clickable">true</item>
	</style>


	<style name="ExpenseMoney88.ref" parent="PreferenceThemeOverlay.v14.Material">
		<item name="android:tint">@color/black_777</item>
		<item name="android:textSize">40px</item>
		<item name="android:fontWeight">800</item>

	</style>
	<style name="ExpenseMoney88.ActionBar.Theme" parent="ThemeOverlay.AppCompat.ActionBar">
		<!-- title text color -->
		<item name="android:textColorPrimary">@color/purple_500</item>
		<item name="fontFamily">@font/poppins_bold</item>


	</style>


	<style name="ExpenseMoney88.Widget.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
		<item name="background">@color/white</item>
		<item name="elevation">0dp</item>
	</style>


