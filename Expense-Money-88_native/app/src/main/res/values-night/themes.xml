<resources>
	<!-- global - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="appBackground">@color/bg_dark</item>
		<item name="background">@color/bg_dark</item>
		<item name="android:textColor">@color/white</item>



		<item name="preferenceTheme">@style/ExpenseMoney88.ref</item>
		<item name="actionBarTheme">@style/ExpenseMoney88.ActionBar.Theme</item>
		<item name="actionBarStyle">@style/ExpenseMoney88.Widget.ActionBar</item>
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_200</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/bg_dark</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/bg_light</item>
		<item name="colorSecondaryVariant">@color/bg_light</item>
		<item name="colorOnSecondary">@color/bg_dark</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->

		<!-- view style -->
		<item name="appViewButtonStyle">@style/ExpenseMoney88.Button</item>
		<item name="appViewIconButtonStyle">@style/ExpenseMoney88.IconButton</item>
	</style>

	<!-- buttons - - - - - - - - - - - - - - - - - - - - - -->
	<style name="ExpenseMoney88.Button" parent="Widget.MaterialComponents.Button">
		<item name="shapeAppearanceOverlay">@style/ExpenseMoney88.Shape.Rounded</item>
		<item name="backgroundTint">@color/transparent</item>
		<item name="android:textColor">@color/white</item>
		<item name="iconTint">@color/white</item>
	</style>
	<!-- icon button -->
	<style name="ExpenseMoney88.IconButton" parent="Widget.App.Button.OutlinedButton.IconOnly">
		<item name="backgroundTint">@color/transparent</item>
		<item name="android:textColor">@color/white</item>
		<item name="iconTint">@color/white</item>
		<item name="android:elevation">10dp</item>
		<item name="iconGravity">textStart</item>
	</style>

	<style name="ExpenseMoney88.ActionBar.Theme" parent="ThemeOverlay.AppCompat.ActionBar">
		<!-- title text color -->
		<item name="android:textColorPrimary">@color/white</item>
		<item name="fontFamily">@font/poppins_bold</item>
	</style>


	<style name="ExpenseMoney88.Widget.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
		<item name="background">@color/bg_dark</item>
		<item name="elevation">0dp</item>
	</style>

	<style name="AppTheme.ActionBar" parent="android:Widget.ActionBar">
		<item name="android:background">@color/bg_dark</item>
	</style>


	<style name="ExpenseMoney88.ref" parent="PreferenceThemeOverlay.v14.Material">
		<item name="android:tint">@color/white</item>
		<item name="android:textSize">40px</item>
		<item name="android:fontWeight">800</item>
	</style>s



</resources>
